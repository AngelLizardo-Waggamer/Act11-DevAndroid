<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aahl.appbd.ui.home.HomeFragment"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/ivLogoHome"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/packaging"/>

    <TextView
        android:id="@+id/tvTituloHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivLogoHome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text="QuickInv"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvSubtituloHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTituloHome"
        app:layout_constraintEnd_toEndOf="@id/tvTituloHome"
        android:layout_marginTop="-14dp"
        android:text="alpha 1"
        android:textSize="8dp"
        />

    <TextView
        android:id="@+id/tvDescripcionApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSubtituloHome"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Your best ally for managing your inventory"
        />



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcionApp"
        app:layout_constraintBottom_toTopOf="@id/tvDisclaimerBottomHome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNavegarManage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage"
                />

            <Button
                android:id="@+id/btnNavegarVisualizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Visualize"/>

        </LinearLayout>



    </LinearLayout>



    <TextView
        android:id="@+id/tvDisclaimerBottomHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="10dp"
        android:textStyle="italic"
        android:gravity="center"
        android:text="This app does not represent the final result of the app development, so the design
and final product can change in the final product."
        />

</androidx.constraintlayout.widget.ConstraintLayout>